{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node"]
  },
  "include": ["vite.config.ts", "netlify/functions/**/*.ts", "scripts/**/*.ts", "shared/**/*.ts"]
}
